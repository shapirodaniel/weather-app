geolocation data model on WeatherContext

{
  name,
  localNames: {
    // string, translations keyed to ISO lang attrs, ex.,
    en: 'Chicago',
    ja: 'シカゴ',
    ...
  },
  location: {
    latitude,   decimal
    longitude,  decimal
  },
  country,      string, ex 'US'
  state,        string, ex 'IL'
}

